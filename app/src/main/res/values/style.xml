<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="push_style">
		<item name="android:hint">@string/style_hint</item>
		<item name="android:inputType">number</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_alias">
		<item name="android:hint">@string/alias_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_mobilenumber">
		<item name="android:hint">@string/mobilenumber_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_tag">
		<item name="android:hint">@string/tag_hint</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="UpdateDialog" parent="@android:style/Theme.Dialog">
	</style>
	<style name="AnimationTranslation">
		<item name="android:windowEnterAnimation">@anim/translation_in</item>
		<item name="android:windowExitAnimation">@anim/translation_out</item>
	</style>

	<!-- 主页面底部的风格 -->
	<style name="rb_main_foot">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:button">@android:color/transparent</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@drawable/selector_main_foot_text</item>
		<item name="android:textSize">14sp</item>
	</style>
</resources>